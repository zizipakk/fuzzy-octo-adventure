@model Tax.Portal.Models.NewViewModel

<div class="form-group" style="font-family: '~/fonts/FrutigerNextPro-Light.otf'; font-size: 12px; color: black;">
    <div class="lead">
        <img src="@Url.Action("DownloadImage", "New")?id=@Model.Headline_pictureId" 
             class="img-responsive col-lg-12" alt="Headline" 
             style="max-width: 300px; height: auto; border: none;" />'
    </div>
    <div class="input-group col-sm-12 col-xs-12">
        @MvcHtmlString.Create(null == Model.PublishingDate ? Model.PublishingDate.ToString() : Model.PublishingDate.Value.ToShortDateString())
    </div>
    @{var i = 0;
    <table class="table" align="right">
        <tr>
            @foreach (var item in Model.TagToList)
            {
                i += 1;
                if (i < Model.TagToList.Count())
                {
                    <td class="pull-right  text-right" style="padding: 0px">@MvcHtmlString.Create(", " + item.Text)</td>
                }
                else
                {
                    <td class="pull-right  text-right" style="padding: 0px">@MvcHtmlString.Create(item.Text)</td>
                }
            }
        </tr>
    </table>
    }
    <div class="input-group col-sm-12 col-xs-12" style="font-size: 16px; color: #002776;">
        @MvcHtmlString.Create(Model.Title1)
    </div>
    <div class="input-group col-sm-12 col-xs-12" style="font-size: 14px; color: #81BC00;">
        @MvcHtmlString.Create(Model.Title2)
    </div>
    <div class="input-group col-sm-12 col-xs-12" style="font-size: 14px; color: #00A1dE;">
        @MvcHtmlString.Create(Model.Subtitle)
    </div>
    @*<div class="input-group col-sm-12 col-xs-12">
            <img src="@Url.Action("DownloadImage", "New")?id=@Model.ThumbnailId" class="img-responsive" alt="Thumbnail" style="border: none;" />'
        </div>*@
    <div class="input-group col-sm-12 col-xs-12 text-left" style="font-size: 12px; color: black;">
        @MvcHtmlString.Create(Model.Body_text)
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    <script type="text/javascript">
    </script>
}
