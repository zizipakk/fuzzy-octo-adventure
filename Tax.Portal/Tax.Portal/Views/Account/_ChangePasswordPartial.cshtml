@using Microsoft.AspNet.Identity
@model Tax.Portal.Models.ManageUserViewModel
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-sm-12 col-xs-12" style="padding-top:35px">
        @Html.ValidationSummary()
    </div>
    <div class="col-sm-offset-3 col-sm-6 col-xs-12">
        <div class="well">
            <h3 class="text-center" style="padding-top:20px; padding-bottom:20px">@ViewBag.Title</h3>
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-4 col-xs-12 control-label" })
                <div class="col-sm-7 col-xs-12">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Old password" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-4 col-xs-12 control-label" })
                <div class="col-sm-7 col-xs-12">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New password" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 col-xs-12 control-label" })
                <div class="col-sm-7 col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "New password again" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-xs-12 pull-right">
                    <input type="submit" value="Change password" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
